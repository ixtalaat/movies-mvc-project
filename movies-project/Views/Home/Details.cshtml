@model Movie

<!-- movie-details-area -->
<section class="movie-details-area" data-background="/assets/img/bg/movie_details_bg.jpg" style='background-image: url("/assets/img/bg/movie_details_bg.jpg");'>
    <div class="container">
        <div class="row align-items-center position-relative">
            <div class="col-xl-3 col-lg-4">
                <div class="movie-details-img">
                    <img src="@Model.Poster" style="width:303px; height:430px;" alt="">
                    <a href="@Model.Trailer" class="popup-video"><img src="img/images/play_icon.png" alt=""></a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-8">
                <div class="movie-details-content">
                    <h5>Movie</h5>
                    <h2>@Model.Name</h2>
                    <div class="banner-meta">
                        <ul>
                            <li class="quality">
                                <span>hd</span>
                            </li>
                            <li class="category">
                                <a href="#">@ViewBag.genre.Name</a>
                            </li>
                            <li class="release-time">
                                <span><i class="far fa-calendar-alt"></i> @Model.DateShow</span>
                                <span><i class="far fa-clock"></i> @Model.Runtime</span>
                                <span class="rating"><i class="fas fa-thumbs-up"></i>@Model.Rate</span>
                            </li>
                        </ul>
                    </div>
                    <p>><span style="font-size:1.1em; color:yellow;">Story </span> @Model.Story</p>
                    <p>><span style="font-size:1.1em; color:yellow;">Director </span> @Model.Director</p>
                    <p>><span style="font-size:1.1em; color:yellow;">Actors </span> @Model.Actor1, @Model.Actor2, @Model.Actor3, @Model.Actor4</p>
                    <div class="movie-details-prime">
                        <ul>
                            <li class="share"><a href="#"><i class="fas fa-share-alt"></i> Share</a></li>
                            <li class="streaming">
                                <h6>Trailer Video</h6>
                            </li>
                            <li class="watch"><a href="@Model.Trailer" class="btn popup-video"><i class="fas fa-play"></i> Watch Now</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="movie-details-btn">
                <a href="img/poster/movie_details_img.jpg" class="download-btn" download="">Download <img src="fonts/download.svg" alt=""></a>
            </div>
        </div>
    </div>
    <!-- gallery-area -->
    <div class="gallery-area position-relative" style="margin-bottom: 10px;">
        <div class="gallery-bg"></div>
        <div class="container-fluid p-0 fix">
            <div class="row gallery-active">
                @foreach (var item in (List<MovieImage>)ViewBag.movieImages)
                {
                    <div class="col-12">
                        <div class="gallery-item">
                            <img src="@item.Photo" alt="" style="width:1078px; height:594px;">
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="slider-nav"></div>
    </div>
<!-- gallery-area-end -->
</section>  
<!-- movie-details-area-end -->
    