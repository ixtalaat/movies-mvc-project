@model List<Genre>
<!-- breadcrumb-area -->
<section class="breadcrumb-area breadcrumb-bg" data-background="/assets/img/banner/movies-banner.jpg" style='background-image: url("/assets/img/banner/movies-banner.jpg");'>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-content">
                        <h2 class="title">Our <span>Movie</span></h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Movie</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->

    <!-- movie-area -->

    <section class="movie-area movie-bg" data-background="/assets/img/bg/movie_bg.jpg" style='background-image: url("/assets/img/bg/movie_bg.jpg");'>
        <div class="container">
            <div class="row align-items-end mb-60">
                    <div class="col-lg-6">
                        <div class="section-title text-center text-lg-left">
                        <span class="sub-title">ONLINE STREAMING</span>
                        <h2 class="title">New Release Movies</h2>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="movie-page-meta">
                        <div class="tr-movie-menu-active text-center">
                            <button class="active" data-filter="*">All</button>
                            @foreach (var item in Model)
                            {
                                <button class="" data-filter="._@item.Id">@item.Name</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="row tr-movie-active">
                @foreach (var item in (List<Movie>)ViewBag.Movies)
                {
                    <div class="col-xl-3 col-lg-4 col-sm-6 grid-item grid-sizer _@item.GenreId">
                        <div class="movie-item movie-item-three mb-50">
                            <div class="movie-poster">
                                <img src="@item.Poster" alt="" style="height: 430px; width: 303px;">
                                <ul class="overlay-btn">
                                    <li><a href="@item.Trailer" class="popup-video btn">Watch Now</a></li>
                                    <li><a asp-action="Details" asp-route-id="@item.Id" class="btn">Details</a></li>
                                </ul>
                            </div>
                            <div class="movie-content">
                                <div class="top">
                                <h5 class="title"><a asp-action="Details" asp-route-id="@item.Id">@item.Name</a></h5>
                                    <span class="date">@item.DateShow</span>
                                </div>
                                <div class="bottom">
                                    <ul>
                                        <li><span class="quality">hd</span></li>
                                        <li>
                                            <span class="duration"><i class="far fa-clock"></i>@item.Runtime</span>
                                            <span class="rating"><i class="fas fa-thumbs-up"></i>@item.Rate</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
        </div>
